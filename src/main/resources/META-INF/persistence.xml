<?xml version="1.0" encoding="UTF-8"?>
<persistence
        xmlns="https://jakarta.ee/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
        version="3.0">

    <persistence-unit name="beerProject">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ENTITIES -->
        <class>model.Beer</class>
        <class>model.Brewer</class>
        <class>model.Category</class>

        <properties>

            <!-- MYSQL DATABASE -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/belgium_beerdb?serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="intec"/>
            <property name="jakarta.persistence.jdbc.password" value="intec-123"/>

            <!-- DIALECT -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- DATABASE GENERATION -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!-- mogelijke waarden: validate | update | create | create-drop -->

            <!-- LOGGING -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- LAZY LOADING zonder problemen -->
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>

        </properties>

    </persistence-unit>

</persistence>
